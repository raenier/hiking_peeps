<div class="card">
  <%= turbo_frame_tag "post_#{post.id}" do %>
    <%= link_to post, class: "card_link" do %>
      <h3><%= post.title %></h3>
      <p><%= post.body %></p>
      <div>
        <%= post.user.full_name %>
      </div>
    <% end %>
    <div class="actions">
      <% if current_user == post.user %>
        <%= link_to "Edit", edit_post_path(post) %>
        <%= link_to "Delete", post, data: { turbo_method: "delete", turbo_confirm: "Are you sure?", turbo_frame: "_top"} %>
      <% end %>
    </div>
  <% end %>
</div>
