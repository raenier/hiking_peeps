<div class="post_card">
  <%= turbo_frame_tag "post_#{post.id}" do %>
    <%= link_to post, class: "card_link" do %>
      <h3><%= post.title %></h3>
      <p><%= post.body %></p>
      <div>
        <%= post.user.full_name %>
      </div>
    <% end %>

    <div class="actions">
      <div class="like">
        <%= button_to image_tag('heart.svg'), like_post_path(post), method: :post unless current_user.liked?(post) %>
        <%= button_to image_tag('heart_filled.svg'), unlike_post_path(post), method: :delete if current_user.liked?(post) %>
        <div class="like_count">
          <%= post.likes.count %>
        </div>
      </div>

      <div class="misc">
        <% if current_user == post.user %>
          <%= link_to "Edit", edit_post_path(post) %>
          <%= link_to "Delete", post, data: { turbo_method: "delete", turbo_confirm: "Are you sure?", turbo_frame: "_top"} %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
