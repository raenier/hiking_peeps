<%= form_with model: post, data: { controller: "form", action: "turbo:submit-end->form#reset" } do |f| %>

  <fieldset>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </fieldset>

  <fieldset>
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </fieldset>

  <%= render partial: "shared/errors", locals: { object: post } %>

  <%= f.submit 'Save', class: 'btn' %>
<% end %>
