<%= form_with model: @comment, data: { controller: "form", action: "turbo:submit-end->form#reset" } do |f| %>
  <%= render partial: "shared/errors", locals: { object: @comment } %>
  <%= f.text_area :body, placeholder: "Write a comment..." %>
  <%= f.submit "COMMENT", class: "comment_submit" %>
<% end %>
